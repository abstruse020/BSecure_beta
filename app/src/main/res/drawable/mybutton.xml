<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#c314579e" />
            <gradient android:angle="-90" android:startColor="#863380b3" android:endColor="#e41c52b4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#3c194ee1" />
            <solid android:color="#a048afaf"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip"/>
            <stroke android:width="2dip" android:color="#c314579e" />
            <gradient android:angle="-90" android:startColor="#e41c52b4" android:endColor="#863380b3" />
        </shape>
    </item>

</selector>