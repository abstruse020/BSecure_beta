<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#cb2a67b7" />
            <gradient android:angle="-90" android:startColor="#ab55abe1" android:endColor="#e23f75d9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#3c194ee1" />
            <solid android:color="#a71a34"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip"/>
            <stroke android:width="2dip" android:color="#cb2a67b7" />
            <gradient android:angle="-90" android:startColor="#e23f75d9" android:endColor="#ab55abe1" />
        </shape>
    </item>

</selector>